#include <iostream>
//ejercicio 14
using namespace std;

int main (){
	int i;
	i=0;
	int VECA[4];
	for (i=0;i<4;i++){
		cout<<"Introduzca un valor para el vector A: ";
		cin>>VECA[i];
	}
	int VECB[4];
	i=0;
	for (i=0;i<4;i++){
		cout<<"Introduzca un valor para el vector B: ";
		cin>>VECB[i];
	}
	i=0;
	int aux, aux2;
	aux=0;
	aux2=0;
	for (i=0;i<4;i++){
		if (VECA[i]>VECA[i+1])
		aux=VECA[i];
		aux2=i;
	}
	cout<<"El valor minimo del vector A es "<<aux<<". El valor en esa posicion dentro del vector B es "<<VECB[aux2]<<endl;
}
